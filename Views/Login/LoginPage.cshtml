@model DadsInventory.Models.FamilyMember

<div id="login-div">
    @using (Html.BeginForm("AuthorizeLogin", "Login", FormMethod.Post))
    {
        <table>
            <tr>
                <td style="text:decoration:underline">App Name</td>
            </tr>
            <tr>
                <td>@Html.LabelFor(model => model.Name)</td>
                <td>@Html.EditorFor(model => model.Name)</td>
            </tr>
            <tr>
                <td>@Html.ValidationMessageFor(model => model.Name)</td>
            </tr>
            <tr>
                <td>@Html.LabelFor(model => model.Password)</td>
                <td>@Html.EditorFor(model => model.Password)</td>
            </tr>
            <tr>
                <td>@Html.ValidationMessageFor(model => model.Password)</td>
            </tr>
            <tr>
                <td>
                    <input type="submit" name="name" value="Login" />
                    <input type="reset" name="name" value="Clear" />
                </td>
            </tr>
        </table>
    }
</div>
@section Scripts
{
    <partial name="_ValidationScriptsPartial.cshtml" />
}